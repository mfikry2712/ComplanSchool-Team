<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailLaporanFasilitas">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="Detail Laporan Fasilitas"
        app:titleTextColor="@color/black" />

    <ImageView
        android:id="@+id/facilityImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="12dp"
        android:transitionName="fasilitas_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="ImageContrastCheck"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/facilityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/txt_facilityname_detail"
        android:textColor="#000000"
        android:textSize="25sp"
        android:transitionName="fasilitas_name"
        app:layout_constraintStart_toStartOf="@+id/facilityImage"
        app:layout_constraintTop_toBottomOf="@+id/laporanTimestamp" />

    <TextView
        android:id="@+id/facilityLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/txt_facilitylocation_detail"
        android:textSize="15sp"
        android:transitionName="fasilitas_name"
        app:layout_constraintStart_toStartOf="@+id/facilityImage"
        app:layout_constraintTop_toBottomOf="@+id/facilityName" />

    <TextView
        android:id="@+id/laporanTimestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="@string/txt_timestamp_detail"
        android:textColor="#000000"
        android:textSize="15sp"
        android:transitionName="laporan_timestamp"
        app:layout_constraintEnd_toEndOf="@+id/facilityImage"
        app:layout_constraintTop_toBottomOf="@+id/facilityImage" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_button_detail_activity"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/btn_read_detail"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollView2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_button_detail_false_activity"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/btn_unrelevant_detail"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.761"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollView2"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/facilityLocation"
            app:layout_constraintTop_toBottomOf="@+id/facilityLocation">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/laporanDecription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineHeight="25dp"
                    android:text="@string/txt_description_detail"
                    android:textSize="14sp"
                    android:transitionName="laporan_description"
                    tools:targetApi="p" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>